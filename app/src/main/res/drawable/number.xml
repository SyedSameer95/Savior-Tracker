<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="30dp"
                android:height="30dp"/>
            <gradient
                android:angle="270"
                android:endColor="#fcffff"
                android:startColor="#fafafa"
                android:centerColor="#fafcfb"/>
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="5000dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>
</selector>