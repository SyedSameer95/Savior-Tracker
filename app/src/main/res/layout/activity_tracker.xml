<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.savior.syedsameerulhasan.savior_tracker.Tracker">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/First"
        android:onClick="PlotButton"
        android:background="@drawable/plusbuttonred"
        android:width="150dp"
        android:layout_above="@+id/Second"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/Third"
        android:background="@drawable/plusbuttonred"
        android:width="150dp"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/Second"
        android:layout_alignLeft="@+id/Second"
        android:layout_alignStart="@+id/Second" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/Second"
        android:background="@drawable/plusbuttonred"
        android:width="150dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/First"
        android:layout_alignStart="@+id/First" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trackers"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/First"
        android:layout_alignStart="@+id/First"
        android:layout_alignRight="@+id/First"
        android:layout_alignEnd="@+id/First"
        android:textAlignment="center"
        android:textSize="25dp" />

</RelativeLayout>
